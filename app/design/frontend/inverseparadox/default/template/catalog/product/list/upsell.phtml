<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell">
    <div class="pat"></div>
    <h2><span><?php echo $this->__('Related Products') ?></span></h2>
    <ul class="upsell-grid" id="upsell-product-table">
    <?php $this->resetItemsIterator() ?>
    <?php for ($_i = 0; $_i < count($this->getItemCollection()->getItems()); $_i++): ?>
        <?php if ($_link = $this->getIterableItem()): ?>
            <li class="item">
                <div class="product-wrapper">
                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(180) ?>" width="180" height="180" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a>
                    <div class="product-top">
                    <h4 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h4>
                    <?php echo $this->getReviewsSummaryHtml($_link, 'short') ?>
                    <?php echo $this->getPriceHtml($_link, true) ?>
                    </div>
                </div>
            </li>
        <?php endif; ?>
    <?php endfor; ?>
    </ul>
</div>
<?php endif ?>
