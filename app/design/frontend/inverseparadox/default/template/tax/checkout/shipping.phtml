/**
 * @var $this Mage_Tax_Block_Checkout_Shipping
 * @see Mage_Tax_Block_Checkout_Shipping
 */
?>

<?php if ($this->displayBoth()):?>
<tr class="shipping display-both excl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="label a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->getExcludeTaxLabel() ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="price a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingExcludeTax()) ?>
    </td>
</tr>
<tr class="shipping display-both incl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="label a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->getIncludeTaxLabel() ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="price a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?>
    </td>
</tr>
<?php elseif($this->displayIncludeTax()) : ?>
<tr class="shipping incl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="label a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo $this->getTotal()->getTitle() ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="price a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?>
    </td>
</tr>
<?php else:?>
<tr class="shipping excl-tax">
    <td style="<?php echo $this->getStyle() ?>" class="label a-right" colspan="<?php echo $this->getColspan(); ?>">
        <?php
        $_title = $this->getTotal()->getTitle();
        $_title = explode($this->__('Shipping & Handling'), $_title);
        if (count($_title) == 2) {
            echo $this->escapeHtml($this->__('Shipping & Handling'));
            echo '<span class="shipping-method">' . $this->escapeHtml($_title[1]) . '</span>';
        } else {
            echo $this->escapeHtml($this->getTotal()->getTitle());
        }
        ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="price a-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingExcludeTax()) ?>
    </td>
</tr>
<?php endif;?>
